</Layout>

<style>
    /* Navbar */
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: rgba(10, 10, 30, 0.85);
        backdrop-filter: blur(20px);
        z-index: 1000;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(168, 85, 247, 0.2);
        box-shadow: 0 4px 30px rgba(168, 85, 247, 0.15);
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.6rem;
        font-weight: 800;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        z-index: 1001;
    }

    .logo-icon {
        font-size: 2rem;
        animation: float 3s ease-in-out infinite;
        filter: drop-shadow(0 0 10px rgba(168, 85, 247, 0.5));
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-8px) rotate(5deg); }
    }

    .nav-logo span:not(.logo-icon) {
        background: linear-gradient(135deg, #a855f7 0%, #22c55e 50%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% 200%;
        animation: gradientShift 4s ease infinite;
    }

    .nav-logo:hover {
        transform: scale(1.08);
        filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.5));
    }

    .nav-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        z-index: 1001;
    }

    .hamburger,
    .hamburger::before,
    .hamburger::after {
        width: 28px;
        height: 3px;
        background: linear-gradient(90deg, #a855f7, #22c55e);
        border-radius: 3px;
        transition: all 0.3s ease;
    }

    .hamburger {
        position: relative;
    }

    .hamburger::before,
    .hamburger::after {
        content: '';
        position: absolute;
        left: 0;
    }

    .hamburger::before {
        top: -9px;
    }

    .hamburger::after {
        top: 9px;
    }

    .nav-toggle.active .hamburger {
        background: transparent;
    }

    .nav-toggle.active .hamburger::before {
        transform: rotate(45deg);
        top: 0;
    }

    .nav-toggle.active .hamburger::after {
        transform: rotate(-45deg);
        top: 0;
    }

    .nav-menu {
        display: flex;
        gap: 0.75rem;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .nav-item {
        position: relative;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.85rem 1.5rem;
        border-radius: 14px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .nav-link::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.15) 0%, rgba(34, 197, 94, 0.15) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 14px;
    }

    .nav-link:hover::before {
        opacity: 1;
    }

    .nav-link:hover {
        color: white;
        transform: translateY(-3px);
        border-color: rgba(168, 85, 247, 0.3);
        box-shadow: 0 8px 25px rgba(34, 197, 94, 0.3);
    }

    .nav-icon {
        font-size: 1.3rem;
        transition: transform 0.3s ease;
    }

    .nav-link:hover .nav-icon {
        transform: scale(1.25) rotate(8deg);
    }

    .nav-link-special {
        background: linear-gradient(135deg, #a855f7 0%, #22c55e 100%);
        color: white;
        border: none;
        box-shadow: 0 4px 20px rgba(168, 85, 247, 0.4);
        font-weight: 700;
    }

    .nav-link-special::before {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.1) 100%);
    }

    .nav-link-special:hover {
        box-shadow: 0 8px 30px rgba(34, 197, 94, 0.6);
        transform: translateY(-3px) scale(1.05);
    }

    main {
        margin: auto;
        padding: 8rem 2rem 3rem;
        width: 1000px;
        max-width: calc(100% - 2rem);
        min-width: 350px;
        color: white;
        font-size: 18px;
        line-height: 1.6;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        gap: 5rem;
    }

    .hero-section {
        text-align: center;
        width: 100%;
        padding: 3rem 0;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 200%;
        height: 200%;
        background:
                linear-gradient(90deg, rgba(168, 85, 247, 0.1) 1px, transparent 1px),
                linear-gradient(0deg, rgba(168, 85, 247, 0.1) 1px, transparent 1px);
        background-size: 50px 50px;
        animation: gridMove 20s linear infinite;
        z-index: 0;
    }

    @keyframes gridMove {
        0% {
            transform: translate(-50%, -50%) perspective(500px) rotateX(60deg);
        }
        100% {
            transform: translate(-50%, -50%) perspective(500px) rotateX(60deg) translateY(-50px);
        }
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .profile-image-container {
        width: 180px;
        height: 180px;
        margin: 0 auto 2rem;
        position: relative;
        z-index: 2;
    }

    .profile-image-wrapper {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        padding: 4px;
        background: linear-gradient(135deg, #a855f7 0%, #22c55e 100%);
        animation: rotate 8s linear infinite;
        box-shadow: 0 0 40px rgba(168, 85, 247, 0.6), 0 0 80px rgba(34, 197, 94, 0.4);
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .profile-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid rgba(10, 10, 30, 0.9);
    }

    h1 {
        font-size: clamp(2.8rem, 9vw, 5.5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 2rem;
        letter-spacing: -0.03em;
        text-shadow: 0 0 40px rgba(168, 85, 247, 0.3);
    }

    .subtitle {
        font-size: clamp(1.1rem, 2.8vw, 1.35rem);
        color: rgba(255, 255, 255, 0.9);
        margin: 0;
        line-height: 1.7;
        font-weight: 400;
    }

    .subtitle strong {
        background: linear-gradient(135deg, #a855f7 0%, #22c55e 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    .content-section {
        width: 100%;
        padding: 3rem 0;
        position: relative;
    }

    .content-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(168, 85, 247, 0.3), rgba(34, 197, 94, 0.3), transparent);
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    h2 {
        font-size: clamp(2rem, 5vw, 2.8rem);
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #a855f7 0%, #22c55e 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(34, 197, 94, 0.3);
    }

    .section-subtitle {
        color: rgba(255, 255, 255, 0.75);
        font-size: clamp(1rem, 2.2vw, 1.15rem);
        margin: 0;
        font-weight: 400;
    }

    .text-gradient {
        background-image: linear-gradient(135deg, #a855f7 0%, #22c55e 50%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% 200%;
        background-position: 0% 50%;
        animation: gradientShift 4s ease infinite;
    }

    @keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .project-group {
        display: flex;
        flex-wrap: wrap;
        gap: 2.5rem;
        justify-content: center;
        padding: 1.5rem 0;
    }

    .experience-group {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(90px, 1fr));
        gap: 2rem;
        justify-items: center;
        max-width: 800px;
        margin: 0 auto;
        padding: 1.5rem;
    }

    .center {
        text-align: center;
        margin: 1.5rem 0;
    }

    .social-list {
        display: flex;
        justify-content: center;
        gap: 2rem;
        list-style: none;
        padding: 0;
        margin-top: 3rem;
        flex-wrap: wrap;
    }

    /* Fade in animations */
    .fade-in {
        opacity: 0;
        animation: fadeInUp 1s ease forwards;
    }

    .delay-1 { animation-delay: 0.3s; }
    .delay-2 { animation-delay: 0.6s; }
    .delay-3 { animation-delay: 0.9s; }
    .delay-4 { animation-delay: 1.2s; }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Music Toggle Button */
    .music-toggle {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, #a855f7 0%, #22c55e 100%);
        color: white;
        border: none;
        padding: 1rem 1.5rem;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        z-index: 999;
        box-shadow: 0 8px 30px rgba(168, 85, 247, 0.4);
        transition: all 0.3s ease;
        animation: pulse 2s ease-in-out infinite;
    }

    .music-toggle:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 12px 40px rgba(34, 197, 94, 0.6);
    }

    .music-toggle.playing {
        animation: none;
        background: linear-gradient(135deg, #22c55e 0%, #10b981 100%);
    }

    .music-toggle.playing .music-icon {
        animation: spin 2s linear infinite;
    }

    .music-icon {
        font-size: 1.5rem;
        display: inline-block;
    }

    @keyframes pulse {
        0%, 100% {
            box-shadow: 0 8px 30px rgba(168, 85, 247, 0.4);
        }
        50% {
            box-shadow: 0 8px 40px rgba(168, 85, 247, 0.8);
        }
    }

    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .nav-toggle {
            display: flex;
        }

        .nav-menu {
            position: fixed;
            top: 0;
            right: -100%;
            width: 300px;
            height: 100vh;
            background: linear-gradient(180deg, rgba(15, 10, 30, 0.98) 0%, rgba(10, 10, 25, 0.98) 100%);
            backdrop-filter: blur(25px);
            flex-direction: column;
            padding: 6rem 2rem 2rem;
            gap: 0.75rem;
            transition: right 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            box-shadow: -10px 0 50px rgba(0, 0, 0, 0.7);
            border-left: 2px solid rgba(168, 85, 247, 0.3);
        }

        .nav-menu.active {
            right: 0;
        }

        .nav-link {
            width: 100%;
            justify-content: flex-start;
            padding: 1.2rem 1.8rem;
            font-size: 1.15rem;
        }

        .nav-icon {
            font-size: 1.5rem;
        }

        .nav-container {
            padding: 0 1.5rem;
        }

        main {
            gap: 4rem;
            padding: 6rem 1rem 2rem;
        }

        .experience-group {
            grid-template-columns: repeat(auto-fit, minmax(75px, 1fr));
            gap: 1.5rem;
        }

        .social-list {
            gap: 1.5rem;
        }

        h1 {
            margin-bottom: 1.5rem;
        }

        .hero-section {
            padding: 2rem 0;
        }

        .profile-image-container {
            width: 140px;
            height: 140px;
        }

        .music-toggle {
            bottom: 1rem;
            right: 1rem;
            padding: 0.85rem 1.2rem;
            font-size: 0.9rem;
        }

        .music-icon {
            font-size: 1.3rem;
        }

        .music-text {
            display: none;
        }
    }
</style>

<script>
    const audio = document.getElementById('bgMusic') as HTMLAudioElement;
    const musicToggle = document.getElementById('musicToggle') as HTMLButtonElement;
    const musicText = musicToggle?.querySelector('.music-text');
    let isPlaying = false;

    audio.src = 'https://stream.bigtimefm.de/stream.mp3';
    audio.volume = 0.1;

    async function toggleMusic() {
        try {
            if (isPlaying) {
                audio.pause();
                isPlaying = false;
                musicToggle?.classList.remove('playing');
                if (musicText) musicText.textContent = 'Musik starten';
            } else {
                await audio.play();
                isPlaying = true;
                musicToggle?.classList.add('playing');
                if (musicText) musicText.textContent = 'Musik l√§uft';
            }
        } catch (error) {
            console.error('Audio-Fehler:', error);
        }
    }

    musicToggle?.addEventListener('click', toggleMusic);

    audio.addEventListener('error', (e) => {
        console.error('Stream-Fehler:', e);
        setTimeout(() => {
            if (isPlaying) {
                audio.load();
                audio.play().catch(() => console.log('Neustart fehlgeschlagen'));
            }
        }, 2000);
    });

    audio.addEventListener('pause', () => {
        if (isPlaying && !audio.ended) {
            setTimeout(() => {
                audio.play().catch(() => {
                    isPlaying = false;
                    musicToggle?.classList.remove('playing');
                });
            }, 100);
        }
    });

    document.addEventListener('visibilitychange', () => {
        if (!document.hidden && isPlaying) {
            audio.play().catch(() => console.log('Fortsetzung fehlgeschlagen'));
        }
    });

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (this: HTMLAnchorElement, e: Event) {
            e.preventDefault();
            const href = this.getAttribute('href');
            if (!href) return;
            const target = document.querySelector(href);
            if (target) {
                (target as HTMLElement).scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
                navMenu?.classList.remove('active');
                navToggle?.classList.remove('active');
            }
        });
    });

    const navToggle = document.getElementById('navToggle');
    const navMenu = document.getElementById('navMenu');

    navToggle?.addEventListener('click', () => {
        navMenu?.classList.toggle('active');
        navToggle?.classList.toggle('active');
    });

    document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (!target.closest('.nav-container')) {
            navMenu?.classList.remove('active');
            navToggle?.classList.remove('active');
        }
    });
</script>